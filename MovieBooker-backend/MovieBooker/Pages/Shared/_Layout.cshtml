@using StackExchange.Redis;
@using System.IdentityModel.Tokens.Jwt;
@using MovieBooker.Dtos;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieBooker</title>
    @*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieBooker.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lato&display=swap" />
    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</head>
<body>
    <section id="header">
        <nav class="navbar navbar-expand-md navbar-light" id="navbar_sticky">
            <div class="container-fluid">
                <a style="color:white" class="navbar-brand fs-4 p-0 fw-bold text-white text-uppercase" asp-page="/Index"><i class="fa fa-video-camera me-1 col_light fs-1 align-middle"></i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mb-0">

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-page="/Index">Trang chủ</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Phim
                            </a>
                            <ul class="dropdown-menu drop_1" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-page="/Users/Movies/ListMovie" asp-route-id="2">Phim Đang Chiếu</a></li>
                                <li><a class="dropdown-item border-0" asp-page="/Users/Movies/ListMovie" asp-route-id="1">Phim Sắp Chiếu</a></li>
                            </ul>
                        </li>

                        @{
                            string? token = Context.Request.Cookies["Token"];
                            using (var redis = ConnectionMultiplexer.Connect("localhost:6379"))
                            {
                                var db = redis.GetDatabase();
                                if (token != null)
                                {
                                    token = db.StringGet(token);
                                }
                            }
                            if (!string.IsNullOrEmpty(token))
                            {
                                var handler = new JwtSecurityTokenHandler();
                                var jsonToken = handler.ReadToken(token) as JwtSecurityToken;

                                string userEmail = jsonToken.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")?.Value;

                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Users/Profile/ProfileUser" asp-route-email="@userEmail">Hồ sơ</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Users/Profile/MyTicket" asp-route-email="@userEmail">Vé của tôi</a>
                                </li>

                            }
                        }

                    </ul>
                    <ul class="navbar-nav mb-0 ms-auto">

                        <li class="nav-item">
                            @if (TempData["enable"] != null)
                            {
                                int status = (int)TempData["movieStatusId"];

                                <form method="post">
                                    <select name="categories" class="form-select bg-light">
                                        <option value="">All Categories</option>
                                        @foreach (var cate in Model.category)
                                        {
                                            <option value="@cate.CategoryId">@cate.CategoryName</option>
                                        }
                                    </select>

                                    <div class="input-group">
                                        <input type="hidden" value="@status" name="statusId" />
                                        <input name="moviename" type="text" class="form-control border-start-0" placeholder="Tìm kiếm phim">
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary bg_yell" type="submit"
                                                asp-page="/Users/Movies/ListMovie"
                                                asp-page-handler="SearchMovie">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </form>
                            }
                        </li>

                        @{

                            if (token == null)
                            {
                                <li class="nav-item ms-3">
                                    <a style="color:#ff4444" class="nav-link button" asp-page="/Login">ĐĂNG NHẬP</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item ms-3">
                                    <a style="color:#ff4444" class="nav-link button" asp-page="/Login" asp-page-handler="Logout">ĐĂNG XUẤT</a>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </section>

    @RenderBody()

    <section id="footer" class="p_3" style="background: #dee2e64a">
        <div class="container-xl">
            <div class="row footer_1">
                <div class="col-md-2">
                    <div class="footer_1i">
                        <h6 style="color:#ff4444" class="text-white fw-bold">LDH CENTER</h6>
                        <hr class="line mb-4">
                        <div class="row footer_1i_small">
                            <h6 class="col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Giới Thiệu</a></h6>
                            <h6 class="mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Tiện Ích Online</a></h6>
                            <h6 class="mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Thẻ Quà Tặng</a></h6>
                            <h6 class="mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Tuyển Dụng</a></h6>
                            <h6 class="mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Liên Hệ Quảng Cáo CGV</a></h6>
                            <h6 class="mb-0 mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Dành cho đối tác</a></h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="footer_1i">
                        <h6 style="color:#ff4444" class="text-white fw-bold">Khám phá</h6>
                        <hr class="line mb-4">
                        <ul class="mb-0">
                            <li class="d-inline-block"><a class="d-block" href="#">Phân tích</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Audio</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Blog</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Kinh doanh</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Sáng tạo</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Thiết kế</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Thí nghiệm</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Tin mới</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Nghiên cứu</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Báo cáo</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Chia sẻ</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Duy trì</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Video</a></li>
                            <li class="d-inline-block"><a class="d-block" href="#">Youtube</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="footer_1i">
                        <h6 style="color:#ff4444" class="text-white fw-bold">Thể loại</h6>
                        <hr class="line mb-4">
                        <div class="row footer_1i_small">
                            <h6 class="col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Phim Hành động</a></h6>
                            <h6 class="mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Phim Tình cảm</a></h6>
                            <h6 class="mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Phim khác</a></h6>
                            <h6 class="mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Phim Hài kịch</a></h6>
                            <h6 class="mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Phim Tâm lý</a></h6>
                            <h6 class="mb-0 mt-2 col-md-12 col-6"><i class="fa fa-circle me-1 col_red font_10"></i> <a class="text-muted" href="#">Phim Cổ điển</a></h6>
                        </div>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="footer_1i">
                        <h6 style="color:#ff4444" class="text-white fw-bold">Đăng ký</h6>
                        <hr class="line mb-4">
                        <p class="text-muted">Đăng ký Email của bạn dưới đây để nhận được các thông tin mới nhất sớm nhất!</p>
                        <input class="form-control bg-transparent" placeholder="Nhập địa chỉ Email" type="text">
                        <h6 class="mb-0 mt-4"><a class="button_1 pt-3 pb-3" href="#">Submit <i class="fa fa-check-circle ms-1"></i> </a></h6>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        window.onscroll = function () { myFunction() };

        var navbar_sticky = document.getElementById("navbar_sticky");
        var sticky = navbar_sticky.offsetTop;
        var navbar_height = document.querySelector('.navbar').offsetHeight;

        function myFunction() {
            if (window.pageYOffset >= sticky + navbar_height) {
                navbar_sticky.classList.add("sticky")
                document.body.style.paddingTop = navbar_height + 'px';
            } else {
                navbar_sticky.classList.remove("sticky");
                document.body.style.paddingTop = '0'
            }
        }
    </script>
    <script src="~/assets/vendors/chart.js/chart.umd.js"></script>
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/todolist.js"></script>
    <script src="~/assets/js/jquery.cookie.js"></script>
    <script src="~/assets/js/dashboard.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
