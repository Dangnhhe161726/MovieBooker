    <div class="main-panel">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách lượt đặt vé</h4>
                    </p>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> Mã lượt đặt vé </th>
                                <th> Mã người dùng </th>
                                <th> Mã ghế - Mã phòng </th>
                                <th> Tên phim </th>
                                <th> Thời gian bắt đầu </th>
                                <th> Thời gian kết thúc </th>
                                <th> Thời gian đặt vé </th>
                                <th> Giá vé </th>
                                <th> Trạng thái </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var res in Model.Reservations)
                            {
                                @if (@res.Status != null)
                                {
                                    <tr>
                                        <td> @res.ReservationId </td>
                                        <td> @res.UserId </td>
                                        <td> @res.SeatNumber - @res.RoomNumber </td>
                                        <td> @res.MovieTitle </td>
                                        <td> @res.StartTime </td>
                                        <td> @res.EndTime </td>
                                        <td> @res.ReservationDate </td>
                                        <td> @res.Price </td>
                                        <td>
                                            @if (@res.Status.Value)
                                            {
                                                <label class="badge badge-success">Chưa thanh toán</label>
                                            }
                                            else
                                            {
                                                <label class="badge badge-danger">Đã thanh toán</label>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="form-group d-flex justify-content-center align-items-center paging">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="ReservationHistory" asp-route-currentPage="@(Model.CurrentPage - 1)">&lt;</a>
                            </li>

                            @if (Model.NumReservations > 0)
                            {
                                <li class="page-item @(1 == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-page="ReservationHistory" asp-route-currentPage="1">1</a>
                                </li>

                                @if (Model.CurrentPage > 4)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }

                                for (int i = Math.Max(2, Model.CurrentPage - 2); i <= Math.Min(Model.CurrentPage + 2, (Model.NumReservations + Model.PageSize - 1) / Model.PageSize); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-page="ReservationHistory" asp-route-currentPage="@i">@i</a>
                                    </li>
                                }

                                @if (Model.CurrentPage < (Model.NumReservations + Model.PageSize - 1) / Model.PageSize - 3)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }

                                if ((Model.NumReservations + Model.PageSize - 1) / Model.PageSize > 1)
                                {
                                    <li class="page-item @((Model.NumReservations + Model.PageSize - 1) / Model.PageSize == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-page="ReservationHistory" asp-route-currentPage="@((Model.NumReservations + Model.PageSize - 1) / Model.PageSize)">
                                            @((Model.NumReservations + Model.PageSize - 1) / Model.PageSize)
                                        </a>
                                    </li>
                                }
                            }

                            <li class="page-item @(Model.CurrentPage == (Model.NumReservations + Model.PageSize - 1) / Model.PageSize ? "disabled" : "")">
                                <a class="page-link" asp-page="ReservationHistory" asp-route-currentPage="@(Model.CurrentPage + 1)">&gt;</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
