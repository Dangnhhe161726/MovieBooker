@page
@model MovieBooker.Pages.Manage.DashboardModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_AdminLayout";
    var topPosition = 1;
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" asp-append-version="true">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" asp-append-version="true">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" asp-append-version="true">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" asp-append-version="true">
<script src="https://code.jquery.com/jquery-3.5.1.min.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" asp-append-version="true"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" asp-append-version="true"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous" asp-append-version="true"></script>


<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white me-2">
                    <i class="mdi mdi-home"></i>
                </span> Báo cáo thống kê
            </h3>
            <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">
                        <span></span>Tổng quan <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-danger card-img-holder text-white">
                    <div class="card-body">
                        <img src="~/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                        <h4 class="font-weight-normal mb-3">
                            Doanh thu trong tuần <i class="mdi mdi-chart-line mdi-24px float-end"></i>
                        </h4>
                        <h2 class="mb-5">@Model.WeekInfo.TotalSales.ToString("N0") VNĐ</h2>
                        <h6 class="card-text">@(Model.WeekInfo.SalesChangePercentage > 0 ? "Tăng" : "Giảm") @Math.Abs(Model.WeekInfo.SalesChangePercentage).ToString("N2")%</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-info card-img-holder text-white">
                    <div class="card-body">
                        <img src="~/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                        <h4 class="font-weight-normal mb-3">
                            Vé bán trong tuần <i class="mdi mdi-bookmark-outline mdi-24px float-end"></i>
                        </h4>
                        <h2 class="mb-5">@Model.WeekInfo.NumberOfOrders.ToString("N0")</h2>
                        <h6 class="card-text">@(Model.WeekInfo.OrdersChangePercentage > 0 ? "Tăng" : "Giảm") @Math.Abs(Model.WeekInfo.OrdersChangePercentage).ToString("N2")%</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-success card-img-holder text-white">
                    <div class="card-body">
                        <img src="~/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                        <h4 class="font-weight-normal mb-3">
                            Số lượng người dùng <i class="mdi mdi-diamond mdi-24px float-end"></i>
                        </h4>
                        <h2 class="mb-5">@Model.WeekInfo.NumberOfUsers.ToString("N0")</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="clearfix">
                            <h4 class="card-title float-start">Thông số doanh thu và vé bán</h4>
                            <div id="visit-sale-chart-legend" class="rounded-legend legend-horizontal legend-top-right float-end"></div>
                        </div>
                        <form method="get">
                            <div class="input-group col-xs-12">
                                <select name="timeFilter" class="form-select form-select-sm">
                                    <option value="weekly" selected="@(Model.ViewType == "default" || Model.ViewType == "weekly")">Theo tuần</option>
                                    <option value="monthly" selected="@(Model.ViewType == "monthly")">Theo tháng</option>
                                    <option value="yearly" selected="@(Model.ViewType == "yearly")">Theo năm</option>
                                </select>
                                <span class="input-group-append">

                                    <button type="submit" class="btn btn-gradient-primary btn-icon-text">
                                        <i class="mdi mdi-file-check btn-icon-prepend"></i> Lọc
                                    </button>
                                </span>
                            </div>
                        </form>
                        <canvas id="visit-sale-chart" class="mt-4" width="669" height="334"
                                style="display: block; box-sizing: border-box; height: 223px; width: 446px;"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-5 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body text-center">
                        <h4 class="card-title">Xuất báo cáo</h4>
                        <div class="d-flex flex-column align-items-center w-100">
                            <button type="button" class="btn btn-primary w-100 mb-2" onclick="submitForm('weekly')">Báo cáo tuần</button>
                            <button type="button" class="btn btn-secondary w-100 mb-2" onclick="submitForm('monthly')">Báo cáo tháng</button>
                            <button type="button" class="btn btn-success w-100" onclick="submitForm('yearly')">Báo cáo năm</button>
                        </div>
                    </div>
                </div>
            </div>
            <form id="exportForm" method="get" style="display:none;">
                <input type="hidden" name="handler" value="ExportReport" />
                <input type="hidden" name="type" id="reportType" />
            </form>
        </div>
        <div class="row">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Phim của tháng</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th> Thứ hạng </th>
                                        <th> Tên phim </th>
                                        <th> Lượng vé bán trong tháng </th>
                                        <th> Doanh thu bán vé trong tháng </th>
                                    </tr>
                                </thead>
                                <tbody @foreach (var m in Model.MovieList)
                                {
                                                        <tr>
                                                             <td> @topPosition </td>
                                                             <td> @m.MovieTitle </td>
                                                             <td> @m.TotalOrders </td>
                                                             <td> @m.TotalSales.ToString("N2") </td>
                                                        </tr>
                                    topPosition++;
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    // Pass the data from the C# model to the JavaScript
    var ChartInfo = @Html.Raw(Json.Serialize(Model.ChartInfo));
</script>
<script>
    function submitForm(type) {
        document.getElementById('reportType').value = type;
        document.getElementById('exportForm').submit();
    }
</script>

