    <link rel="shortcut icon" href="~/assets/images/favicon.png" /> *@


<link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css" asp-append-version="true" />
<!-- Main css -->
<link rel="stylesheet" href="~/css/StyleLoginRegister.css" asp-append-version="true" />

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Reservation Records</h4>
                    </p>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> ReservationID </th>
                                <th> UserID </th>
                                <th> Seat - Room </th>
                                <th> Movie Title </th>
                                <th> Start Time </th>
                                <th> End Time </th>
                                <th> Reservation Date </th>
                                <th> Price </th>
                                <th> Status </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var res in Model.reservations)
                            {
                                <tr>
                                    <td> @res.ReservationId </td>
                                    <td> @res.UserId </td>
                                    <td> @res.SeatNumber - @res.RoomNumber </td>
                                    <td> @res.MovieTitle </td>
                                    <td> @res.StartTime </td>
                                    <td> @res.EndTime </td>
                                    <td> @res.ReservationDate </td>
                                    <td> @res.Price </td>
                                    <td> @res.Status </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

