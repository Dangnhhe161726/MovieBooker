            <div class="cinema">
                <h3>@theater.TheaterName</h3>
                    <div class="times" data-theater-id="@theater.TheaterId">
                      
                        @foreach(var time in Model.schedules)
                        {
                            @if(time.TheaterId == theater.TheaterId)
                            {
                                <span class="time" data-timeslot-id="@time.TimeSlotId"
